<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.otc.modular.sys.dao.SendMessageRobotDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="TNewcomerReceivingRecord" type="cn.com.otc.modular.sys.bean.pojo.TNewcomerReceivingRecord">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="redpacket_id" property="redpacketId" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="money" property="money" />
    </resultMap>

    <resultMap id="tFollowRecord" type="cn.com.otc.modular.sys.bean.pojo.TFollowRecord">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="redpacket_id" property="redpacketId" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="money" property="money" />
    </resultMap>
    <insert id="createMyFollowRedpacketRecord">
        INSERT INTO `antwalletbot_server`.`t_follow_record`
            (`user_id`, `redpacket_id`, `money`, `status`, `create_time`, `update_time`)
        VALUES
            (#{tgId}, #{redpacketId}, #{money}, 1, now(), NULL);
    </insert>

    <update id="updateTFollowRecord">
            UPDATE `antwalletbot_server`.`t_follow_record` SET
             `status` = #{stateFollow},
             `update_time` = now() WHERE `user_id` = #{tgId};

    </update>

    <select id="selectMyRedPacket" parameterType="java.lang.String" resultMap="TNewcomerReceivingRecord">
        SELECT redpacket_id,user_id,money,status,creat_time,update_time FROM t_newcomer_receiving_record where redpacket_id=#{redpacketId}
    </select>
    <select id="selectTFollowRecord" resultMap="tFollowRecord">
        select * from t_follow_record where user_id=#{tgId}
    </select>
    <select id="MyFollowRecordList" resultType="cn.com.otc.modular.sys.bean.pojo.TFollowRecord">
        select user_id,redpacket_id,status,create_time,update_time,money from t_follow_record
    </select>
    <select id="selectTNewUserAndNewFocus"
            resultMap="TNewcomerReceivingRecord"
            parameterType="java.lang.String">
        SELECT status
        FROM t_newcomer_receiving_record
        where  user_id = #{tgId}
    </select>


</mapper>
